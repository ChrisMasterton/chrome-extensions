{
  "manifest_version": 3,
  "name": "Element Picker for Claude",
  "description": "Build multi-element debug bundles with ranked locators, React context, and repro hints for Claude Code",
  "version": "1.1",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_title": "Pick Element",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
